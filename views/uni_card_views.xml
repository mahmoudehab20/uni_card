<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="uni_card_form_view" model="ir.ui.view">
            <field name="name">Uni Card Form</field>
            <field name="model">uni.card</field>
            <field name="arch" type="xml">
                <form string="Uni Card">
                    <sheet>
                        <div class="row">
                        <div class="col-md-10">
                            <div class="oe_title">
                                <label for="student_id" class="oe_edit_only"/>
                                <h1>
                                    <field name="student_id"/>
                                </h1>
                            </div>
                            <group>
                                <group>
                                    <field name="department"/>
                                    <field name="academic_year"/>
                                </group>
                                <group>
                                    <field name="study_year"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="barcode" invisible="1"/>
                                </group>
                            </group>
                        </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="uni_card_tree_view" model="ir.ui.view">
            <field name="name">Uni Card Tree</field>
            <field name="model">uni.card</field>
            <field name="arch" type="xml">
                <tree string="Uni Card">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="uni_card_action" model="ir.actions.act_window">
            <field name="name">Card</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">uni.card</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
