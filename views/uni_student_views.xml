<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="uni_student_form_view" model="ir.ui.view">
            <field name="name">Uni Student Form</field>
            <field name="model">uni.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_draft" type="object" string="Set to Draft"
                                class="btn-secondary" invisible="state in ['valid','draft']"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,valid,expired"/>
                    </header>
                    <sheet>
                        <div class="row">
                            <!-- الحقول الأساسية (الاسم، القسم، السنة، الجنس) في اليسار -->
                            <div class="col-md-10">
                                <div class="oe_title">
                                    <label for="name" class="oe_edit_only"/>
                                    <h1>
                                        <field name="name" placeholder="Student Name"/>
                                    </h1>
                                </div>
                                <group>
                                    <field name="department"/>
                                    <field name="academic_year"/>
                                    <field name="gender"/>
                                </group>
                            </div>
                            <!-- الصورة في اليمين -->
                            <div class="col-md-2" style="text-align: center;">
                                <field name="image" widget="image" class="oe_avatar"
                                       options="{'preview_image': 'image'}" string=""/>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="uni_student_tree_view" model="ir.ui.view">
            <field name="name">Uni Student Tree</field>
            <field name="model">uni.student</field>
            <field name="arch" type="xml">
                <tree string="Students">
                    <field name="name"/>
                    <field name="department"/>
                    <field name="academic_year"/>
                    <field name="gender"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="student_check_expiry_date_cron" model="ir.cron">
            <field name="name">Student : Check Expiery Date</field>
            <field name="model_id" ref="model_uni_student"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">
                model._check_expiry_date()
            </field>
            <field name="active">True</field>
        </record>

        <record id="uni_student_action" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">uni.student</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>